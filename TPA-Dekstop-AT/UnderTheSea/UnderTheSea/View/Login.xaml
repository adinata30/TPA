<Window x:Class="UnderTheSea.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnderTheSea"
        mc:Ignorable="d"
        Title="Login" >
    <Grid>
        <Label x:Name="employee" Content="Employee ID : " HorizontalAlignment="Left" Margin="57,51,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label x:Name="password" Content="Password : " HorizontalAlignment="Left" Margin="57,202,0,0" VerticalAlignment="Top" FontSize="40"/>
        <TextBox x:Name="idField" HorizontalAlignment="Left" Height="45" Margin="57,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" FontSize="24"/>
        <PasswordBox x:Name="passwordField" Height="44" HorizontalAlignment="Left" Margin="57,270,0,0" VerticalAlignment="Top" Width="425" FontSize="40"/>
        <Button x:Name="loginBtn" Content="Login" Height="46" HorizontalAlignment="Left" Margin="350,374,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="0.5,0.5" Click="loginBtn_Click"/>

    </Grid>
</Window>
