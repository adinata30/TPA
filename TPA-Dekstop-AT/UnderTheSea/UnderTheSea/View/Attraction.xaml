<Window x:Class="UnderTheSea.Attraction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnderTheSea"
        mc:Ignorable="d"
        Title="Attraction" >
    <Grid>
        <Button x:Name="manageTicketBtn" Content="Manage Ticket" HorizontalAlignment="Left" Margin="250,100,0,0" VerticalAlignment="Top" Width="320" Click="manageTicket_Click" Height="50"/>
        <Button x:Name="generateTicketBtn" Content="Generate Ticket" HorizontalAlignment="Left" Margin="250,201,0,0" VerticalAlignment="Top" Width="320" Click="generateTicket_Click" Height="51"/>
        <Button x:Name="validateTicketBtn" Content="Validate Ticket" HorizontalAlignment="Left" Margin="250,299,0,0" VerticalAlignment="Top" Width="320" Click="validateTicket_Click" Height="50"/>
    </Grid>
</Window>
